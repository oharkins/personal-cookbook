{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Meal Plan Schema",
  "description": "Schema for meal planning and organization",
  "type": "object",
  "required": ["id", "name", "startDate", "endDate", "meals", "createdAt", "updatedAt"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the meal plan",
      "pattern": "^[a-zA-Z0-9-_]+$"
    },
    "name": {
      "type": "string",
      "description": "Name of the meal plan",
      "minLength": 1,
      "maxLength": 100
    },
    "startDate": {
      "type": "string",
      "description": "Start date of the meal plan",
      "format": "date"
    },
    "endDate": {
      "type": "string",
      "description": "End date of the meal plan",
      "format": "date"
    },
    "meals": {
      "type": "object",
      "description": "Daily meals organized by date",
      "patternProperties": {
        "^\\d{4}-\\d{2}-\\d{2}$": {
          "type": "object",
          "required": ["breakfast", "lunch", "dinner"],
          "properties": {
            "breakfast": {
              "type": "array",
              "description": "Breakfast recipes for the day",
              "items": {
                "type": "object",
                "required": ["recipeId", "servings"],
                "properties": {
                  "recipeId": {
                    "type": "string",
                    "description": "Reference to a recipe ID"
                  },
                  "servings": {
                    "type": "number",
                    "description": "Number of servings",
                    "minimum": 1
                  },
                  "notes": {
                    "type": "string",
                    "description": "Additional notes for this meal"
                  }
                }
              }
            },
            "lunch": {
              "type": "array",
              "description": "Lunch recipes for the day",
              "items": {
                "type": "object",
                "required": ["recipeId", "servings"],
                "properties": {
                  "recipeId": {
                    "type": "string",
                    "description": "Reference to a recipe ID"
                  },
                  "servings": {
                    "type": "number",
                    "description": "Number of servings",
                    "minimum": 1
                  },
                  "notes": {
                    "type": "string",
                    "description": "Additional notes for this meal"
                  }
                }
              }
            },
            "dinner": {
              "type": "array",
              "description": "Dinner recipes for the day",
              "items": {
                "type": "object",
                "required": ["recipeId", "servings"],
                "properties": {
                  "recipeId": {
                    "type": "string",
                    "description": "Reference to a recipe ID"
                  },
                  "servings": {
                    "type": "number",
                    "description": "Number of servings",
                    "minimum": 1
                  },
                  "notes": {
                    "type": "string",
                    "description": "Additional notes for this meal"
                  }
                }
              }
            },
            "snacks": {
              "type": "array",
              "description": "Snacks for the day",
              "items": {
                "type": "object",
                "required": ["recipeId", "servings"],
                "properties": {
                  "recipeId": {
                    "type": "string",
                    "description": "Reference to a recipe ID"
                  },
                  "servings": {
                    "type": "number",
                    "description": "Number of servings",
                    "minimum": 1
                  },
                  "notes": {
                    "type": "string",
                    "description": "Additional notes for this snack"
                  }
                }
              }
            }
          }
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "General notes about the meal plan"
    },
    "createdAt": {
      "type": "string",
      "description": "Timestamp when the meal plan was created",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "description": "Timestamp when the meal plan was last updated",
      "format": "date-time"
    }
  }
} 